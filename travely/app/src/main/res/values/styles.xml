<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Inputs">
        <item name="android:background">@drawable/inputs</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_marginHorizontal">20dp</item>
        <item name="android:textColor">#4A4A4A</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textColorHint">#808080</item>
    </style>

    <style name="LabelInputs">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:textColor">#545454</item>
        <item name="android:layout_marginTop">15dp</item>
    </style>

    <style name="Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">20dp</item>
        <item name="android:layout_marginBottom">50dp</item>
        <item name="android:background">@drawable/rounded</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:backgroundTint">@null</item>
        <item name="android:textSize">16sp</item>
    </style>


    <style name="CardProfile">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="strokeColor">@null</item>
    </style>

    <style name="CardLinearLayoutProfile">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="TextViewProfileInfos">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ImageViewProfileInfos">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">@color/white</item>
        <item name="android:src">@drawable/ic_arrow_forward</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="CustomCardShapeTop" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">8dp</item>
        <item name="cornerSizeTopRight">8dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <style name="CustomCardShapeBottom" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeBottomLeft">8dp</item>
        <item name="cornerSizeBottomRight">8dp</item>
    </style>

    <style name="LineProfile">
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">#7ABDBDBD</item>
    </style>

</resources>