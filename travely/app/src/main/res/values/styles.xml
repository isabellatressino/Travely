<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Inputs">
        <item name="android:background">@drawable/inputs</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_marginHorizontal">20dp</item>
        <item name="android:textColor">#4A4A4A</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textColorHint">#808080</item>
    </style>

    <style name="LabelInputs">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:textColor">#545454</item>
        <item name="android:layout_marginTop">15dp</item>
    </style>

    <style name="Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">20dp</item>
        <item name="android:layout_marginBottom">50dp</item>
        <item name="android:background">@drawable/rounded</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:backgroundTint">@null</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>